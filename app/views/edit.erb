<h3>Edit your notes/thoughts on the book your reading</h3>
<form action="/books/<%= @book.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="title" value="<%= @book.title %>" placeholder="Title:">
  <input type="text" name="description" value="<%= @book.description %>" placeholder="Description:">
  <br>
  <input type="text" name="content" value="<%= @book.content %>"> 
  <br>
<!-- <input type="text" size="150%" name="content" placeholder="Content:"> -->
<textarea name="content" id="content" value="<%= @book.content %>" placeholder="Content:" style="width:50%;height:300px;font:18px sans-serif"></textarea>
  <br>
  <input type="submit" value="edit">
</form>
<a href="/profile">back to profile</a>